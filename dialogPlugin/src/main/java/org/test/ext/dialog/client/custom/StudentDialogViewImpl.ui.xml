<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
<ui:style>
    .emptyBorder {
        margin: 0 12px;
    }

    .label {
        text-overflow: ellipsis;
    }

    .input {
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        width: 100%;
    }

    .errorHint {
        color: red;
    }
</ui:style>

<g:DockLayoutPanel unit="PX" width="360px" height="170px" addStyleNames="{style.emptyBorder}">
    <g:center>
        <g:Grid width="100%" height="100%">

            <g:row>
                <g:customCell verticalAlignment="ALIGN_MIDDLE">
                    <g:Label ui:field="lblName" text="Name" addStyleNames="{style.label}"/>
                </g:customCell>
                <g:customCell verticalAlignment="ALIGN_MIDDLE">
                    <g:TextBox ui:field="txtName" addStyleNames="{style.input}"/>
                </g:customCell>
            </g:row>

            <g:row>
                <g:customCell verticalAlignment="ALIGN_MIDDLE">
                    <g:Label ui:field="lblAge"  text="Age" addStyleNames="{style.label}"/>
                </g:customCell>
                <g:customCell verticalAlignment="ALIGN_MIDDLE">
                    <g:TextBox ui:field="txtAge" addStyleNames="{style.input}"/>
                </g:customCell>
            </g:row>

            <g:row>
                <g:customCell verticalAlignment="ALIGN_MIDDLE">
                    <g:Label ui:field="lblGraduate"  text="Graduate" addStyleNames="{style.label}"/>
                </g:customCell>
                <g:customCell verticalAlignment="ALIGN_MIDDLE">
                    <g:TextBox ui:field="txtGraduate" addStyleNames="{style.input}"/>
                </g:customCell>
            </g:row>

        </g:Grid>
    </g:center>
</g:DockLayoutPanel>
</ui:UiBinder>